<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar Widget App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add the calendar widget to your home screen to see the current time and week view."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/update_widget_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Widget"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/widget_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Widget Settings"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/test_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Time Update"
        android:layout_marginBottom="8dp" />

</LinearLayout>