<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Time -->
    <TextView
        android:id="@+id/preview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="14:30"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Day and Date -->
    <TextView
        android:id="@+id/preview_day_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/preview_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Thứ Tư 1/8"
        android:textColor="#666666"
        android:textSize="12sp" />

    <!-- Lunar Calendar -->
    <TextView
        android:id="@+id/preview_lunar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/preview_day_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="8/6"
        android:textColor="#8B4513"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Weather Info -->
    <TextView
        android:id="@+id/preview_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/preview_lunar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="☀️ 28°C"
        android:textColor="#4A90E2"
        android:textSize="10sp" />

</RelativeLayout> 